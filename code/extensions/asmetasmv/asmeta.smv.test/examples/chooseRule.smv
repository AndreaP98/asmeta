--file examples\chooseRule.smv
-- options: flatten? false
MODULE main
	VAR
		foo: {-2147483647, 1, 2, 3, 4}; --controlled
		--declaration of choose variables
		var_$x_0: 1..4;
	ASSIGN
		init(foo) := 3;
		next(foo) :=
			case
				(var_$x_0 = 1) & 3 in {-2147483647, 1, 2, 3, 4}: 3;
				TRUE: foo;
			esac;
	INVAR	(var_$x_0 = 1);
--CTL properties
CTLSPEC NAME ctl0 := AG((foo = 3));
