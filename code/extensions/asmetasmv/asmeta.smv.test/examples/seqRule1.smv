--file examples\seqRule1.smv
MODULE main
	VAR
		fooA: {-2147483647, 1, 2, 3, 4}; --controlled
		fooB: {-2147483647, 1, 2, 3, 4}; --controlled
		mon: boolean; --monitored
	ASSIGN
		init(fooA) := -2147483647;
		init(fooB) := -2147483647;
		next(fooA) :=
			case
				(!(mon)) & 3 in {-2147483647, 1, 2, 3, 4}: 3;
				(mon) & 2 in {-2147483647, 1, 2, 3, 4}: 2;
				TRUE: fooA;
			esac;
		next(fooB) :=
			case
				(!(mon)) & 4 in {-2147483647, 1, 2, 3, 4}: 4;
				(mon) & 3 in {-2147483647, 1, 2, 3, 4}: 3;
				TRUE: fooB;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AG((mon <-> AX(((fooB = 3) & (fooA = 2)))));
CTLSPEC NAME ctl1 := AG((!(mon) <-> AX(((fooB = 4) & (fooA = 3)))));
CTLSPEC NAME ctl2 := ((fooB = -2147483647) & (fooA = -2147483647));
