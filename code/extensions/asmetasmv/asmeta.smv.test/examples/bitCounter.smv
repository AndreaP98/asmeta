--file examples\bitCounter.smv
MODULE main
	VAR
		value_BIT0: boolean; --controlled
		value_BIT1: boolean; --controlled
		value_BIT2: boolean; --controlled
	DEFINE
		carryIn_BIT0 := TRUE;
		carryIn_BIT1 := carryOut_BIT0;
		carryIn_BIT2 := carryOut_BIT1;
		carryOut_BIT0 := (value_BIT0 & carryIn_BIT0);
		carryOut_BIT1 := (value_BIT1 & carryIn_BIT1);
		carryOut_BIT2 := (value_BIT2 & carryIn_BIT2);
	CONSTANTS BIT0, BIT1, BIT2, BIT_UNDEF;
	ASSIGN
		init(value_BIT0) := FALSE;
		init(value_BIT1) := FALSE;
		init(value_BIT2) := FALSE;
		next(value_BIT0) := !(value_BIT0);
		next(value_BIT1) := (value_BIT1 xor carryIn_BIT1);
		next(value_BIT2) := (value_BIT2 xor carryIn_BIT2);
--CTL properties
CTLSPEC NAME ctl0 := AG((value_BIT0 <-> AX(!(value_BIT0))));
CTLSPEC NAME ctl1 := AG(((value_BIT1 & AX(value_BIT1)) <-> (AX(AX(!(value_BIT1))) & AX(AX(AX(!(value_BIT1)))))));
CTLSPEC NAME ctl2 := (AG((AX(AX(AX(!(value_BIT2)))) & ((value_BIT2 & AX(value_BIT2)) & AX(AX(value_BIT2))))) <-> ((AX(AX(AX(AX(!(value_BIT2))))) & AX(AX(AX(AX(AX(!(value_BIT2))))))) & AX(AX(AX(AX(AX(AX(!(value_BIT2)))))))));
CTLSPEC NAME ctl3 := (AG(AF((value_BIT2 & (!(value_BIT1) & !(value_BIT0))))) & AG(AF(((value_BIT1 & value_BIT0) & !(value_BIT2)))) & AG(AF(((value_BIT0 & !(value_BIT1)) & !(value_BIT2)))) & AG(AF((value_BIT2 & (value_BIT1 & !(value_BIT0))))) & AG(AF(((value_BIT1 & !(value_BIT0)) & !(value_BIT2)))) & AG(AF(((!(value_BIT1) & !(value_BIT0)) & !(value_BIT2)))) & AG(AF((value_BIT2 & (value_BIT0 & !(value_BIT1))))) & AG(AF((value_BIT2 & (value_BIT1 & value_BIT0)))));
