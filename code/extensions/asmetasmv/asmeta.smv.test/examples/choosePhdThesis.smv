--file examples\choosePhdThesis.smv
MODULE main
	VAR
		foo: {-2147483647, 1, 2, 3, 4}; --controlled
		--declaration of choose variables
		var_$x_0: 1..4;
	ASSIGN
		init(foo) := 1;
		next(foo) :=
			case
				(var_$x_0 = 2) & 4 in {-2147483647, 1, 2, 3, 4}: 4;
				(var_$x_0 = 1) & 3 in {-2147483647, 1, 2, 3, 4}: 3;
				TRUE: foo;
			esac;
	INVAR	((var_$x_0 = 2) | (var_$x_0 = 1));
--CTL properties
CTLSPEC NAME ctl0 := AG((foo != 2));
