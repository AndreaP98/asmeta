--file examples\seq4.smv
MODULE main
	VAR
		mon: boolean; --monitored
		var_a: {-2147483647, 1, 2, 3, 4}; --controlled
		var_b: {-2147483647, 1, 2, 3, 4}; --controlled
	ASSIGN
		init(var_a) := 1;
		init(var_b) := -2147483647;
		next(var_a) := var_a;
		next(var_b) :=
			case
				(!(mon)) & ((var_a + 2) + 1) in {-2147483647, 1, 2, 3, 4}: ((var_a + 2) + 1);
				(mon) & 3 in {-2147483647, 1, 2, 3, 4}: 3;
				TRUE: var_b;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AX(AG(((var_b = 3) <-> mon)));
CTLSPEC NAME ctl1 := AX(AG(((var_b = 4) <-> !(mon))));
CTLSPEC NAME ctl2 := (AX(AG((var_b != 1))) & (var_b = undef));
CTLSPEC NAME ctl3 := AG((var_a = 1));
