--file examples\choose.smv
-- options: flatten? false
MODULE main
	VAR
		var_a_1: {-2147483647, 1, 2, 3, 4}; --controlled
		var_a_2: {-2147483647, 1, 2, 3, 4}; --controlled
		var_a_3: {-2147483647, 1, 2, 3, 4}; --controlled
		var_a_4: {-2147483647, 1, 2, 3, 4}; --controlled
		--declaration of choose variables
		var_$x_0: 1..4;
	ASSIGN
		init(var_a_1) := 4;
		init(var_a_2) := 4;
		init(var_a_3) := 4;
		init(var_a_4) := 4;
		next(var_a_1) :=
			case
				(var_$x_0 = 1) & 4 in {-2147483647, 1, 2, 3, 4}: 4;
				TRUE: var_a_1;
			esac;
		next(var_a_2) := var_a_2;
		next(var_a_3) := var_a_3;
		next(var_a_4) := var_a_4;
	INVAR	(var_$x_0 = 1);
--CTL properties
CTLSPEC NAME ctl0 := AG((var_a_1 = 4));
CTLSPEC NAME ctl1 := AG((((var_a_2 = 4) & (var_a_3 = 4)) & (var_a_4 = 4)));
