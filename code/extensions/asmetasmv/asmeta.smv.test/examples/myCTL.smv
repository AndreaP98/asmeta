--file examples\myCTL.smv
MODULE main
	VAR
		foo: {-2147483647, 1, 2, 3, 4}; --controlled
		fooA: {-2147483647, 1, 2, 3, 4}; --controlled
		monA: boolean; --monitored
	ASSIGN
		init(foo) := 1;
		init(fooA) := 1;
		next(foo) :=
			case
				(!(foo < 4)) & 1 in {-2147483647, 1, 2, 3, 4}: 1;
				(foo < 4) & (foo + 1) in {-2147483647, 1, 2, 3, 4}: (foo + 1);
				TRUE: foo;
			esac;
		next(fooA) :=
			case
				(monA & (fooA < 4)) & (fooA + 1) in {-2147483647, 1, 2, 3, 4}: (fooA + 1);
				(!(fooA < 4)) & 1 in {-2147483647, 1, 2, 3, 4}: 1;
				TRUE: fooA;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AG(((foo = 1) <-> AX(AX(AX((foo = 4))))));
CTLSPEC NAME ctl1 := AG(EF(((fooA = 1) -> EX(EX(EX((fooA = 4)))))));
