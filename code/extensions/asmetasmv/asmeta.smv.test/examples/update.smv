--file examples\update.smv
MODULE main
	VAR
		foo: {AA, BB, CC, ENUMDOM_UNDEF}; --controlled
		foo1: {AA, BB, CC, ENUMDOM_UNDEF}; --controlled
		mon: boolean; --monitored
	CONSTANTS ENUMDOM_UNDEF, AA, BB, CC;
	ASSIGN
		init(foo) := ENUMDOM_UNDEF;
		init(foo1) := ENUMDOM_UNDEF;
		next(foo) :=
			case
				(!(mon)): BB;
				(mon): AA;
				TRUE: foo;
			esac;
		next(foo1) :=
			case
				(!(mon)): AA;
				(mon): CC;
				TRUE: foo1;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AG(EF(mon));
CTLSPEC NAME ctl1 := AG(EF(!(mon)));
CTLSPEC NAME ctl2 := AG((mon -> AX(((foo1 = CC) & (foo = AA)))));
CTLSPEC NAME ctl3 := AG((!(mon) -> AX(((foo1 = AA) & (foo = BB)))));
