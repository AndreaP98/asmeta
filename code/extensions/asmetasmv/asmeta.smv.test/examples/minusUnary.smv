--file examples\minusUnary.smv
MODULE main
	VAR
		foo: {-1, -2, -2147483647, 0, 1, 2}; --controlled
		fooA: {-1, -2, -2147483647, 0, 1, 2}; --controlled
		fooB: {-10, -2, -2147483647, -4, -6, -8, 0, 10, 2, 4, 6, 8}; --controlled
	ASSIGN
		init(foo) := -2;
		init(fooA) := -2;
		init(fooB) := -10;
		next(foo) :=
			case
				(foo < 2) & (foo + 1) in {-1, -2, -2147483647, 0, 1, 2}: (foo + 1);
				TRUE: foo;
			esac;
		next(fooA) :=
			case
				(fooA < 2) & (fooA + 1) in {-1, -2, -2147483647, 0, 1, 2}: (fooA + 1);
				TRUE: fooA;
			esac;
		next(fooB) :=
			case
				(fooB < -2) & (fooB + 2) in {-10, -2, -2147483647, -4, -6, -8, 0, 10, 2, 4, 6, 8}: (fooB + 2);
				TRUE: fooB;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := (AX(((foo = -1) & AX(((foo = 0) & AX((AX((foo = 2)) & (foo = 1))))))) & (foo = -2));
CTLSPEC NAME ctl1 := (AX((AX((AX((AX((fooA = 2)) & (fooA = 1))) & (fooA = 0))) & (fooA = -1))) & (fooA = -2));
CTLSPEC NAME ctl2 := ((fooB = -10) & AX(((fooB = -8) & AX((AX((AX(((fooB = -2) & AG((fooB = -2)))) & (fooB = -4))) & (fooB = -6))))));
