--versione di efWithInitialStates.smv con un solo stato iniziale (cond = true e foo = 1)

--La teoria della CTL dice che
--AG(not(phi)) <-> not(EF(phi))
--Quindi mi aspetto che, se AG(not(phi)) e' false, EF(phi)
--sia true (perche' not(EF(phi)) e' false).
--In NuSMV, pero', le proprieta' per essere verificate devono
--essere vere in tutti gli stati iniziali.
--Poiche' in questo caso c'e' un solo stato iniziale l'equivalenza descritta
--sopra viene verificata.
MODULE main
	VAR
		foo: 1..4;
		cond: boolean;
	ASSIGN
		init(foo) := 1;
		init(cond) := TRUE;
		next(foo):=
			case
				cond & foo < 4: foo + 1;
				TRUE: 1;
			esac;
		next(cond) := cond;
SPEC	AG(foo != 1); --false
SPEC	AG(foo != 2); --false
SPEC	AG(foo != 3); --false
SPEC	AG(foo != 4); --false
SPEC	EF(foo = 1); --true
SPEC	EF(foo = 2); --true
SPEC	EF(foo = 3); --true
SPEC	EF(foo = 4); --true