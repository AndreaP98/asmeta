--file examples\if2.smv
-- options: flatten? false
MODULE main
	VAR
		mon: boolean; --monitored
		mon2: boolean; --monitored
		var_a: {-2147483647, 1, 10, 2, 3, 4, 5, 6, 7, 8, 9}; --controlled
	ASSIGN
		init(var_a) := -2147483647;
		next(var_a) :=
			case
				(mon & !(mon2)) & 2 in {-2147483647, 1, 10, 2, 3, 4, 5, 6, 7, 8, 9}: 2;
				(!(mon) & !(mon2)) & 4 in {-2147483647, 1, 10, 2, 3, 4, 5, 6, 7, 8, 9}: 4;
				(mon2 & mon) & 1 in {-2147483647, 1, 10, 2, 3, 4, 5, 6, 7, 8, 9}: 1;
				(!(mon) & mon2) & 3 in {-2147483647, 1, 10, 2, 3, 4, 5, 6, 7, 8, 9}: 3;
				TRUE: var_a;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AG(((mon2 & mon) <-> AX((var_a = 1))));
CTLSPEC NAME ctl1 := AG(((mon & !(mon2)) <-> AX((var_a = 2))));
CTLSPEC NAME ctl2 := AG(((!(mon) & mon2) <-> AX((var_a = 3))));
CTLSPEC NAME ctl3 := AG(((!(mon) & !(mon2)) <-> AX((var_a = 4))));
