--file examples\seq2.smv
MODULE main
	VAR
		mon: 1..4; --monitored
		var_b: {-2147483647, 1, 2, 3, 4}; --controlled
	ASSIGN
		init(var_b) := 1;
		next(var_b) :=
			case
				(mon != 4) & (mon + 1) in {-2147483647, 1, 2, 3, 4}: (mon + 1);
				(!(mon != 4)) & mon in {-2147483647, 1, 2, 3, 4}: mon;
				TRUE: var_b;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := (AG(((mon = 2) -> AX((var_b = 3)))) & AG(((mon = 3) -> AX((var_b = 4)))) & AG(((mon = 1) -> AX((var_b = 2)))) & AG(TRUE));
CTLSPEC NAME ctl1 := AG(((mon = 4) -> AX((var_b = 4))));
CTLSPEC NAME ctl2 := AG(((mon >= 3) -> AX((var_b = 4))));
