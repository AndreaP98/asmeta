--file examples\seq3.smv
MODULE main
	VAR
		mon: boolean; --monitored
		var_b: {-2147483647, 1, 2, 3, 4}; --controlled
	ASSIGN
		init(var_b) := 1;
		next(var_b) :=
			case
				(!(mon)) & 2 in {-2147483647, 1, 2, 3, 4}: 2;
				(mon) & 3 in {-2147483647, 1, 2, 3, 4}: 3;
				TRUE: var_b;
			esac;
--CTL properties
CTLSPEC NAME ctl0 := AG((var_b != 4));
CTLSPEC NAME ctl1 := AG((mon <-> AX((var_b = 3))));
CTLSPEC NAME ctl2 := AG((!(mon) <-> AX((var_b = 2))));
